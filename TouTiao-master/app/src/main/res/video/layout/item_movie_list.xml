<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="164dp"
        android:id="@+id/fr"
        android:layout_height="170dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:background="@drawable/jz_title_bg"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rectangle_translucent"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:text="02:11"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="视频名称:" />

    <TextView
        android:id="@+id/video_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="视频类型:" />

    <TextView
        android:id="@+id/video_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:text="视频简介：" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_type"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
         />

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@+id/fr"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="-3dp"
        android:layout_toRightOf="@+id/fr">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/color_F3F5F4" />
</RelativeLayout>